{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "watch": true,
    "removeComments": true,
    
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": ".",
    "paths": {
      "$/*": ["./*"], // App root
      "@": ["modules/."], // Doppelgangster main
      "@/*": ["modules/*"], // Doppelgangster components
      "Configurations": ["Configurations"] // Configurations
    }
  },
  "exclude": [
    "node_modules",
    "database"
  ]
}