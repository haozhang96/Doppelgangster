{
    "compileOnSave": true,
    "compilerOptions": {
        // Compilation paths
        "rootDir": "src",
        "outDir": "dist",

        // Compilation parameters
        "module": "commonjs",
        "target": "esnext",
        "importHelpers": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "watch": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        
        // Type-checking options
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}