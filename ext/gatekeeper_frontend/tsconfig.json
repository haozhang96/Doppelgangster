{
    "compileOnSave": true,
    "compilerOptions": {
        // Compilation paths
        "rootDir": "",
        "outDir": "dist",
        
        // Module resolution paths
        "baseUrl": "",

        // Compilation parameters
        "module": "commonjs",
        "target": "esnext",
        "importHelpers": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "watch": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        
        // Type-checking options
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}