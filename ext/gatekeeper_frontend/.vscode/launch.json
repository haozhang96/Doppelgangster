    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Doppelgangster Gatekeeper Front-end",
            "program": "${workspaceFolder}/js/app.js",
            "envFile": "${workspaceFolder}/.env",
            "outFiles": [
                "${workspaceFolder}/js/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Doppelgangster Gatekeeper Front-end in Docker",
            "preLaunchTask": "build",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "docker-debug"],
            "port": 9222,
            "restart": true,
            "timeout": 60000,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/doppelgangster_gatekeeper_frontend",
            "outFiles": [
                "${workspaceFolder}/js/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}